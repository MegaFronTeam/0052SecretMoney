mixin sBaseBlock(t, text)
	// start sBaseBlock
	+b.sBaseBlock.section#sBaseBlock&attributes(attributes)
		+e.row.row
			+e.col--aside.col-lg
				+e.panel--dark 
					+e.logo
						img(src="img/svg/logo.svg", alt="")
						+e.title Секреты денег  от #[span.text-primary Алексея  Линецкого]
					.d-none.d-lg-block: +img("img/person.png").person-img
					+b.footer-block.d-none.d-lg-block
						div ИП Линецкий Максим Михайлович
						div ОГРН 321519000027464 | ИНН 510802654907
			+e.col--form.col-lg-auto
				+e.panel--white
					+b.form-wrap
						h1= t
						.h3.mb-4= text
						if block
							block
						else
							+input("Логин")
							+input("Пароль",'password')
							+e.btn-row.row.my-4.gy-2
								.col-6
									button.btn.btn-primary.w-100 Войти
								.col-6
									button.btn.btn-light.w-100 Не помню пароль
							label.form-check.form-switch.mb-4.d-inline-block
								input(type="checkbox" checked).form-check-input
								span.form-check-label Запомнить меня
						- let t1 = text === "Авторизуйтесь в вашем личном кабинете" ? 'Еще не зарегистрировались?' : 'Уже зарегистрированы?' 
						+e.sign-up-text.h2.mt-5.mb-3= t1 
						a.btn.btn-outline-dark(href='#').w-100 Регистрация
						a.btn.btn-dark(href='#').w-100.mt-3 Поддержка
		+b.footer-block.d-lg-none
			div ИП Линецкий Максим Михайлович
			div ОГРН 321519000027464 | ИНН 510802654907
	// end sBaseBlock